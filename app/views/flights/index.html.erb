<h1>Listing flights</h1>

<table>
  <tr>
    <th>Flight no</th>
    <th>Departure time</th>
    <th>Duration</th>
    <th>From</th>
    <th>To</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%= flight.flight_no %></td>
    <td><%= flight.departure_time %></td>
    <td><%= flight.duration %></td>
    <td><%= flight.from %></td>
    <td><%= flight.to %></td>
    <td><%= flight.price %></td>
    <td><%= link_to 'Show', flight %></td>
    <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
    <td><%= link_to 'Destroy', flight, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

